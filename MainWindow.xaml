<local:SoundDesignerModernWindow x:Class="SoundDesigner.MainWindow"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                           xmlns:local="clr-namespace:SoundDesigner"
                           xmlns:vm="clr-namespace:SoundDesigner.ViewModel"
                           xmlns:lib="clr-namespace:SoundDesigner.Lib"
                           xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                           mc:Ignorable="d"
                           Title="{Binding Title}" 
                           Height="860"
                           Width="1240"
                           ContentSource="/Content/HomePage.xaml"
                           Style="{StaticResource SoundDesignerModernWindow}"
                           WindowStartupLocation="CenterScreen"
                           IsTitleVisible="True"
                           Background="Transparent">
    
<Window.DataContext>
    <vm:MainWindowViewModel></vm:MainWindowViewModel>
</Window.DataContext>

</local:SoundDesignerModernWindow>
